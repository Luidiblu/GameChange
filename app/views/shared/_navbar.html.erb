<div class="navbar navbar-expand-sm navbar-light navbar-lewagon justify-content-between">

  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://i.imgur.com/QuZK127.png" %>
  <% end %>
  <div class="div">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <div class="searchbox">
            <%= form_tag games_path, method: :get, class: "searchbar" do %>
            <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                style: "border-radius: 40px;",
                placeholder: "Search a game" %>
            <% end %>
          </div>
        </li>
        <li class="nav-item dropdown">

            <% if current_user.avatar.file.nil? %>

              <%= cl_image_tag "avatarsample.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>

            <% else %>

              <%= cl_image_tag current_user.avatar, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>

            <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", profile_path(current_user), class: "dropdown-item" %>
            <%= link_to "Configurations", edit_user_registration_path(current_user), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "navbar-login" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
