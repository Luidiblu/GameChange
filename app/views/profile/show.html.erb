<section class="profile-page">

  <!-- Masthead -->
  <div class="container">
    <div class="row userMain">
      <div class="col-lg-12">
        <div class="userBlock">
          <% if current_user.banner_img.url.nil?%>
          <div class="masterhead shadow p-3 bg-gray rounded img-raised" style="background-image: url('<%= cl_image_path "image-not-found_t5rkhk.png", height: 300, width: 400, crop: :fill %>');"></div>

        <% else %>
        <div class="masterhead shadow p-3 bg-gray rounded img-raised" style="background-image: url('<%= cl_image_path @user.banner_img, height: 300, width: 400, crop: :fill %>');"></div>
      <% end %>
        <div class="userImg">
            <%= cl_image_tag(@user.avatar, class: 'img-raised', width: 150, height: 150, crop: :thumb, gravity: :face) %>
          </div>
          <div class="userDescription">
            <h5><%= @user.nickname %></h5>
            <p><%= @user.name %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

</section>

\

<!-- Portfolio Section -->
<section class="p-pagesection portfolio" id="favorite_games">

  <div class="container">
<!-- Portfolio Section Heading -->
    <div class="jumbotron-fluid">
      <h2 class="p-pagesection-heading text-center text-uppercase text-secondary mb-0 display-4"> My Games</h2>



    <!-- Icon Divider -->
    <div class="divider-custom">
      <div class="divider-custom-line"></div>
      <div class="divider-custom-icon">
        <i class="fas fa-star"></i>
      </div>
      <div class="divider-custom-line"></div>
    </div>
  </div>
    <!-- Portfolio Grid Items -->
    <div class="container portfolio">
      <div class="row align-center">
        <% @favorites.each do  |fav|  %>
        <!-- Portfolio Item -->
        <div class="col-md-6 col-lg-4">
          <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal1">
            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
              <div class="portfolio-item-caption-content text-center text-white">
                <i class="fas fa-plus fa-3x"></i>
              </div>
            </div>
            <div class="jumbotron-fluid">
              <div class="container clearfix justify-content-center ">

            <%= cl_image_tag fav.game.photo, class: 'shadow p-3 rounded mx-auto d-block img-raised', height: '400', width: '100%' %>
            <div class="h-100 w-100">
            </div>

            </div>
          </div>

          </div>
        </div>
        <% end %>
      </div>
      <!-- /.row -->
    </div>
  </div>
</section>
