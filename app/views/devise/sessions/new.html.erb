<div class="container-fluid justify-content-center login-bg">
    <div class="row justify-content-center ">
      <!------------------------------------------------------------------------------------------------>
      <div class="container d-flex m-3 p-3 flex-column">
        <div class="col ">
          <div class="d-flex bannertext1">
            <div class="loginform text-center">
              <div class="row mx-auto">
                <div class="container px-auto pb-3">
                  <!-- -------------------------------------------------------------------------------------------- -->
                  <div class="text-center text-primary">
                    <h2>Login</h2>
                  </div>

                  <hr>
                  <!------------------------------------------------------------------------------------------------>
                  <form class="px-5">
                    <!-------------------------------------------->
                    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <!-- -------------------------------------------------------------------------------------------- -->
                    <div class="row">

                    <div class="form-group">
                      <div class="form-inputs">

                        <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, class: 'form-control px-2' %>
                        <%= f.input :password, required: false, input_html: { autocomplete: "current-password" }, class: 'form-control px-2' %>
                        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                      </div>
                    </div>
                  </div>

                    <!-- -------------------------------------------------------------------------------------------- -->
                    <div class="form-group">
                      <div class="form-actions">
                        <%= f.button :submit, "Log in", class: "btn-gamechanger" %>
                      </div>
                    </div>
                  <% end %>
                </form>
                <!-- -------------------------------------------------------------------------------------------- -->
                <hr>
                <!-- -------------------------------------------------------------------------------------------- -->
                <div class="text-center">
                  Don't have a account?
                  <%= render "devise/shared/links" %>
                </div>
              </div>
              <!-- -------------------------------------------------------------------------------------------- -->
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
</div>
