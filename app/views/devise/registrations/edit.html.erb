<div class="container-fluid background-edit-user">
  <!----------------------------------------------->
  <div class="container d-flex">
    <!----------------------------------------------->
    <div class="row">

      <div class="col mx-auto z-depth float-left back-btn">
        <%= link_to :back do %>
        <i class="fas fa-arrow-circle-left fa-2x"></i>
      <% end %>
    </div>
  </div>

  <div class="row">
    <!----------------------------------------------->
    <div class="container d-flex p-3 flex-column">
      <div class="row">

      <div class="col">
        <div class="d-flex bannertext1">
          <div class="loginform text-center">
            <div class="row mx-auto">
              <div class="container">
                <h2><%= @user.name %></h2>
                <hr>
                <!------------------------------------------------------------->
                  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                  <%= f.error_notification %>
                  <div class="form-group">
                    <div class="form-row">
                      <div class="col">
                        <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>
                        <%= f.input :avatar, input_html: { class: 'hidden', id: 'photo-input'}, label_html: { class: 'upload-avatar'}, label: '' %>
                        <%= f.input :avatar_cache, as: :hidden %>
                      </div>
                      <div class="w-100"></div>
                    </div>
                  </div>
                  <!------------------------------------------------------------->
                  <div class="form-group">
                    <div class="row align-center">
                      <div class="col mx-auto justify-content-center">
                        <div class="form-inputs">
                          <%= f.input :email, required: true, autofocus: true, class: 'form-control' %>
                          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                            <p>Currently waiting confirmation for:
                              <%= resource.unconfirmed_email %></p>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!------------------------------------------------------------->
                  <div class="form-group">
                    <div class="form-row">
                      <div class="col">
                        <%= f.input :name, required: false, class: 'form-control' %>
                      </div>
                      <div class="col-autofocus"></div>
                      <div class="col">
                        <%= f.input :nickname, required: false, class: 'form-control' %>
                      </div>
                    </div>
                  </div>
                  <!------------------------------------------------------------->
                  <div class="form-row">
                    <div class="col">
                      <div class="card-text">
                        <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>
                        <%= f.input :banner_img, input_html: { class: 'hidden', id: 'photo-input '}, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo' %>
                        <%= f.input :banner_img_cache, as: :hidden %>
                      </div>
                    </div>
                  </div>
                  <!------------------------------------------------------------->
                  <div class="row">
                    <div class="col">
                      <%= f.input :password_confirmation, required: false, input_html: { autocomplete: "new-password" } %>
                    </div>
                    <div class="col">
                      <%= f.input :current_password, hint: "supply current password to confirm changes", required: true, input_html: { autocomplete: "current-password" } %>
                    </div>
                  </div>
                  <!------------------------------------------------------------->
                  <div class="form-actions">
                    <%= f.button :submit, "Update", class: "btn-gamechanger" %>
                  </div>
                <% end %>
                <!----------------------------------SIMPLE FORM END--------------------------->

              <!----------------------BOOTSTRAP FORM END--------------------------------------->

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  </div>
</div>
</div>
</div>
<%#= render 'shared/footer' %>
