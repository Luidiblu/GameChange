<div class="container">
  <div class="searchbox">
    <%= form_tag games_path, method: :get, class: "searchbar" do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a game"
        %>
    <% end %>
  </div>
  <div class="card-row" >
    <% @games.each do |game| %>
      <%= link_to game_path(game) do %>
      <div class="card-space">
          <div class="card p-1">
            <%= image_tag(game.photo ? game.photo : "http://suiteapp.com/shopflow-1-03-0/img/no_image_available.jpeg", class: "card-img") %>
            <div class="card-body">
              <p class="card-text"><%= game.name %></p>
              <p class="card-text"><% game.lobbies.limit(10) %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <br>
  <%= link_to "new", new_game_path, class: "btn btn-primary" %>


</div>
<br>
